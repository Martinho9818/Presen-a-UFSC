<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ufsc.presencaufsc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_ufsc_final"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_ufsc_final_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TelaInicial"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TelaCadastroAluno"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".TelaDisciplinas"
            android:label="@string/title_activity_tela_disciplinas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TelaCadastroDisciplina"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".TelaInformacoesAluno" />
        <activity android:name=".TelaPresenca" />
        <activity
            android:name=".TelaRecuperacaoConta"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>